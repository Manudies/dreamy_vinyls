extends ../layout

block content
    h1 lista de user
    if error 
        p(class="error")= error
    if data
        ul
            each user in data 
                li
                    a(href="/user/"+user.user)= user.name
                    a(href=`/user/${user.user}/update`) 
                        button Editar
                    form(action=`/user/${user.user}/remove`, method="post") 
                        button(type="submit") Borrar
    a(href="/user/new")
        button Nuevo