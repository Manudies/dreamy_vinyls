extends ../layout

block content
    if error 
        p(class="error")= error
    if vinyl 
        h2= vinyl.album_name 
        h3= vinyl.artist_name
        if vinyl.price
        p Precio: #{vinyl.price}$
        if vinyl.relase_date 
            p Fecha de lanzamiento: #{vinyl.relase_date}
    a(href="/vinyl")
        button Volver