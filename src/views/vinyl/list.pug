extends ../layout

block content
    h1 lista de vinilos
    if error 
        p(class="error")= error
    if data
        ul
            each vinyl in data 
                li
                    a(href="/vinyl/"+vinyl.vinyl_id)= vinyl.album_name
                    a(href=`/vinyl/${vinyl.vinyl_id}/update`) 
                        button Editar
                    form(action=`/vinyl/${vinyl.vinyl_id}/remove`, method="post") 
                        button(type="submit") Borrar
    a(href="/vinyl/new")
        button Nuevo